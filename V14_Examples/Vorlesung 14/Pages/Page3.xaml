<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vorlesung_14.Pages.Page3"
             Title="Page 3">

    <Shell.TitleView>
        <Grid HeightRequest="36" ColumnDefinitions="Auto,*" ColumnSpacing="5">
            <Image Grid.Column="0"
                   Source="{FontImage &#xf3cd;, FontFamily=FontAwesomeSolid, Size=72, Color=White}"
                   Margin="10,4,20,4" />

            <Label Grid.Column="1"
                   Text="Page 3"
                   FontSize="24"
                   FontFamily="OpenSansSemibold"
                   VerticalTextAlignment="Center" />
        </Grid>

    </Shell.TitleView>

    <Label 
        Text="Page 3 (TitleView)"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />

</ContentPage>